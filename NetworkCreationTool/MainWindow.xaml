<Window x:Class="Aptacode.StateNet.NetworkCreationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfGraphControl="http://mlsagl"
        xmlns:WPFControls="clr-namespace:Aptacode.StateNet.WPF.Views;assembly=Aptacode.StateNet.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Loaded="MainWindow_OnLoaded">

    <TabControl>
        <TabItem Header="View">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <WPFControls:StateNetwork Grid.Column="0" DataContext="{Binding StateNetworkViewModel}" />
                <WPFControls:StateEditor Grid.Column="1" DataContext="{Binding StateEditorViewModel}" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>