<UserControl x:Class="WPFDemo.Views.StateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDemo"
             xmlns:converters="clr-namespace:WPFDemo.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:IsStateActiveToStrokeConverter x:Key="IsStateActiveToStrokeConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Ellipse Fill="WhiteSmoke" Stroke="{Binding IsActive, Converter={StaticResource IsStateActiveToStrokeConverter}}" StrokeThickness="5"></Ellipse>
        <Label Content="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
    </Grid>
</UserControl>
